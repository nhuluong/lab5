<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">

</head>
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/hci-friends.css" rel="stylesheet">

	<script type="text/javascript" src="js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="js/hci-friends.js"></script>
	<script type="text/javscript" src="js/bootstrap.js"></script>
	
</head>

<div class="container">
	<body>
		<h1>My HCI Friends</h1>
		<img src="http://lorempixel.com/500/500/people">
		<h3>Fake friend</h3>
		<p>All my friends are imaginary.</p>

		{{#each friends}}
			<div class="profile">
				<img class="pimage img-responsive img-rounded" src="{{imageURL}}">
				<h3 class="pname"><a href="#">{{name}}</a></h3>
				<p class="pdescription">{{description}}</p>
			</div>
			<hr>
		{{/each}}

		<form id="addFriendForm" role="form" method="get" action="/add">
			<h3>Add a friend</h3>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
		    </div>
		    <div class="form-group">
		      <label for="description">Description:</label>
		      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
		    </div>
		    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
		</form>

	</body>
</div>
</html>
